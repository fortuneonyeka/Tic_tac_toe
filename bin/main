#!/usr/bin/env ruby
class TicTac
    def initialize
    end
    def displayboard
        puts "+---+---+---+"
        puts "| 1 | 2 | 3 |"
        puts "+---+---+---+"
        puts "| 4 | 5 | 6 |"
        puts "+---+---+---+"
        puts "| 7 | 8 | 9 |"
        puts "+---+---+---+"
    end
end
puts 'Welcome to Ruby"s Tic Tac Toe'
puts "Enter first player name:"
name1 = gets.chomp
puts "Enter second player name:"
name2 = gets.chomp
puts "#{name1} will play with  X and #{name2} will play with  O"
sleep(1)
puts "\n Lets Start.."
sleep(1)
puts `clear`
x=TicTac.new
x.displayboard

