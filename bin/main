#!/usr/bin/env ruby
require_relative '../lib/game_logic.rb'

# board

class TicTac
  def initialize; end
  def numeric?(obj)
    !obj.to_s.match(/\A[+-]?\d+?(\.\d+)?\Z/).nil?
  end
end

$instance =Board.new
Tic = TicTac.new
puts 'Welcome to Ruby"s Tic Tac Toe'
puts 'Enter first player name:'
name1 = gets.chomp
loop do
  if name1 == ''
    puts 'empty string please input valid name'
  elsif Tic.numeric? name1
    puts 'name can not be integer please input valid name'
  else
    break
  end
  name1 = gets.chomp
end

puts 'Enter second player name:'
name2 = gets.chomp

loop do
  if name2 == ''
    puts 'empty string please input valid name'
  elsif Tic.numeric? name2
    puts 'name can not be integer please input valid name'
  else
    break
  end
  name2 = gets.chomp
end

puts "#{name1} will play with  X and #{name2} will play with  O"
sleep(1)
puts "\n Lets Start.."
sleep(1)
x = 0
num_turn = 0
loop do
  puts `clear`
  $instance.displayboard
  puts "\n"
  if num_turn == 9
    puts 'The game is drawn no player won'
    sleep(3)
    return
  end
  if x.zero?
    $instance.playerturn(name1,x)
    if $instance.checkwinner
      puts `clear`
      $instance.displayboard
      puts "#{name1}is a Winner"
      sleep(3)
      return
    end

    x = 1

  else
    $instance.playerturn(name2,x)
    if $instance.checkwinner
      puts `clear`
      $instance.displayboard
      puts "#{name2}is a Winner"
      return
    end
    x = 0
  end
  num_turn += 1
end
